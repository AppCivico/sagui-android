<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlHeaderInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivInfo"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:paddingTop="4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_info"
        app:tint="@color/colorPrimary"/>

    <com.eokoe.sagui.widgets.CustomTextView
        android:id="@+id/tvInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivInfo"
        android:layout_toEndOf="@id/ivInfo"
        android:layout_toRightOf="@id/ivInfo"
        android:text="@string/whats_complaint"
        android:textAllCaps="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="12sp"/>

    <com.eokoe.sagui.widgets.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvInfoTitle"
        android:layout_alignStart="@id/tvInfoTitle"
        android:layout_below="@id/tvInfoTitle"
        android:text="@string/explain_complaint"/>
</RelativeLayout>